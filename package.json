{
  "name": "@jamashita/anden",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:jamashita/anden.git"
  },
  "license": "MIT",
  "author": "jamashita <jamashita@arachnid.xyz>",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run --parallel build",
    "clean": "rimraf coverage && lerna run --parallel clean",
    "commit": "git cz",
    "format": "eslint --fix 'packages/*/src/**/*.{ts,tsx}'",
    "release": "lerna exec --concurrency 1 -- npx --no-install semantic-release -e semantic-release-monorepo",
    "setup": "lerna bootstrap && lerna link",
    "test": "jest test",
    "//update": "yarn setup && yarn update:upgrade && yarn update:install && lerna run --parallel update",
    "update": "yarn setup && yarn update:upgrade && yarn update:install",
    "update:d": "yarn setup && yarn update:upgrade && yarn update:install && lerna run --parallel update",
    "update:install": "yarn install && yarn upgrade",
    "update:upgrade": "ncu --packageManager yarn --deep --upgrade --timeout 600000"
  },
  "devDependencies": {
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@jamashita/eslint-config": "1.33.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.2.0",
    "@semantic-release/npm": "7.0.10",
    "@semantic-release/release-notes-generator": "9.0.2",
    "@types/jest": "26.0.22",
    "@types/object-hash": "1.3.4",
    "@types/sinon": "9.0.11",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "concurrently": "6.0.0",
    "eslint": "7.22.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.3.2",
    "eslint-plugin-node": "11.1.0",
    "git-cz": "4.7.6",
    "husky": "5.2.0",
    "jest": "26.6.3",
    "lerna": "4.0.0",
    "lint-staged": "10.5.4",
    "npm-check-updates": "11.3.0",
    "rimraf": "3.0.2",
    "semantic-release": "17.4.2",
    "semantic-release-monorepo": "7.0.4",
    "sinon": "10.0.0",
    "sort-package-json": "1.49.0",
    "ts-jest": "26.5.4",
    "typescript": "4.2.3"
  },
  "engines": {
    "node": ">= 12.0.0",
    "npm": "npm is not supported"
  },
  "engineStrict": true,
  "publishConfig": {
    "access": "public"
  }
}
